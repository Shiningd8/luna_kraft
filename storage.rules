rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /profile_images/{userId}.jpg {
      allow read: if true;  // Allow anyone to read profile images
      allow write: if request.auth != null && request.auth.uid == userId;  // Only allow users to upload their own profile image
    }
    
    match /{allPaths=**} {
      allow read: if true;  // Default read access
      allow write: if request.auth != null;  // Must be authenticated to write
    }
  }
} 