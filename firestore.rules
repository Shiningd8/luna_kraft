rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/User/$(request.auth.uid)).data;
    }

    // User collection rules
    match /User/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      // Allow deletion of own user document
      allow delete: if isOwner(userId);
    }

    // Posts collection rules
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.poster == /databases/$(database)/documents/User/$(request.auth.uid);
      allow update: if isSignedIn() && resource.data.poster == /databases/$(database)/documents/User/$(request.auth.uid);
      // Allow deletion of own posts
      allow delete: if isSignedIn() && resource.data.poster == /databases/$(database)/documents/User/$(request.auth.uid);
    }

    // Comments collection rules
    match /comments/{commentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.user == request.auth.uid;
      // Allow deletion of own comments
      allow delete: if isSignedIn() && resource.data.user == request.auth.uid;
    }

    // Followers and Following
    match /followers/{followerId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == followerId || request.auth.uid in resource.data.followers);
    }

    match /following/{followingId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == followingId || request.auth.uid in resource.data.following);
    }

    // Analytics collection - allow authenticated users to write
    match /analytics/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    // General read/write rules
    match /{document=**} {
      // Default to requiring authentication
      allow read: if isSignedIn();
      // Only allow writes through our specific rules above
      allow write: if false;
    }
  }
} 